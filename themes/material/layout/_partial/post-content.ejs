<div id="post-content" class="mdl-color-text--grey-700 mdl-card__supporting-text fade out">
    <% if(theme.scheme === 'Paradox') { %>
        <%- page.content %>
        <blockquote style="margin: 2em 0 0;padding: 0.5em 1em;font-size: 12px;border-left: 3px solid #F44336;background-color: #F5F5F5;list-style: none;">
            <!-- <p><strong>
                <% if (page.license) { %>
                    <%- page.license %>
                <% } else { %> 
                    <%- theme.license %>
                <% } %></strong>
                <br>
            </p> -->
            <p style="margin-bottom: 0; font-size:12px;">恭喜你发现了我，让我带你用全新的视角去看待这个真实的世界</p>
            <strong><%- __('post.permalink') %></strong><a href="<%= page.permalink %>"><%= page.permalink %></a>
        </blockquote>
    <% } %>

    <% if(theme.scheme === 'Isolation') { %>
        <div class="post-content_wrapper">
            <p class="post-title">
                <%- page.title %>
            </p>
            <%- page.content %>
            <% if (page.license || theme.license) { %>
                <blockquote>
                    <p>
                        <% if (page.license) { %>
                            <%- page.license %>
                        <% } else { %> 
                            <%- theme.license %>
                        <% } %>
                        <br>
                        <%- __('post.permalink') %> <%= page.permalink %>
                    </p>
                </blockquote>
            <% } %>
        </div>
    <% } %>
</div>
